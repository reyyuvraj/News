<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categorySource">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NewsSource"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:id="@+id/categorySourceName"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/categorySourceName"
            android:src="@drawable/correct"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is test title for the news"
        android:textSize="22dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/categorySource"
        android:id="@+id/categoryTitle"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/post01"
        android:layout_below="@+id/categoryTitle"
        android:id="@+id/categoryImage"
        android:adjustViewBounds="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"/>

</RelativeLayout>